<div class="container">
  
  <div class="row ">
    <h5 class="text-center mb-5"><%= @user.name %>さんのお気に入りのお茶リスト</h5>
  </div>
  
  <div class="row justify-content-center">
    
    <div class="col-lg-3 col-10">
      <%= render "public/users/info", user: @user %>
    </div>   
    
    <div class="col-lg-9 col-10">
      <% if @favorite_tea_list.present? %>
        <%= render "public/teas/teas", teas: @favorite_tea_list %>
      <% else %>
        <div><%= @user.name %>さんのお気に入りのお茶はありません。</div>
      <% end %>
      
      <div class="row"> 
        <div class="col-10 mb-5 d-flex justify-content-center">
          <% if @favorite_tea_list %> 
          <%= paginate @favorite_tea_list %>
          <% end %> 
        </div>
      </div>
      
    </div>
    
  </div>
</div>
 