<h1>ユーザー編集画面</h1>
<%= form_with model: @user, url: user_path(@user) do |form| %>

  <div class="field">
    <%= form.label :"ユーザーネーム" %><br />
    <%= form.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= form.label :"お住まいの地域" %><br />
    <%= form.select :prefecture_id, Prefecture.pluck(:name, :id) %>
  </div>

  <div class="field">
    <%= form.label :"メールアドレス" %><br />
    <%= form.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= form.label :"プロフィール画像" %><br />
    <%= form.file_field :profile_image, accept: "image/*" %>
  </div>

  <div class="field">
    <%= form.label :"自己紹介" %><br />
    <%= form.text_area :introduction %>
  </div>

  <div class="actions">
    <%= form.submit "変更を保存する" %>
  </div>

<% end %>