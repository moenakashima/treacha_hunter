<div class="container">

  <% if @search_teas %> 
    <div class="row justify-content-center">
      <h5 class="text-center mb-5">お茶の種類「<%= @search_teas.join(" + ")  %>」</h5>
    </div>
  <% end %>

  <div class="row row-cols-md-auto row-cols-xxl-3 justify-content-center">

    <% @teas.each do |tea| %>
      <div class="col mb-4">   
         
        <%= link_to tea_path(tea) do %>
          <%= image_tag tea.get_tea_image(300,250) %>
        <% end %>
        
        <div class="row">
          <div class="col-8 pt-2">
            <%= tea.tea_type.name %>
            (<%= tea.prefecture.name %>)
            &nbsp;
            <%= link_to user_path(tea.user) do %>
              <%= tea.user.name %>
            <% end %>
          </div>
         
          <div id="favorite-<%= tea.id %>" class="col-3">
            <%= render "public/favorites/favorite", tea: tea %>
          </div>
        </div>
        <%= tea.created_at.strftime('%Y/%m/%d') %>
        <%= link_to tea_path(tea) do %>
          <%= tea.opinion.truncate(15) %>
        <% end %>
      </div>
    <% end %>
  <% if @teas %> 
  <%= paginate @teas %>
  <% end %> 
  </div>
</div>
