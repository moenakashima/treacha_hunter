<div class="row row-cols-md-2 row-cols-xxl-3 justify-content-evenly">
  <% teas.each do |tea| %>
    <div class="col mb-4 text-center">   
      <%= link_to tea_path(tea) do %>
        <%= image_tag tea.get_tea_image(250,200), class: "border border-secondary rounded-2" %>
      <% end %> 
      <div class="row justify-content-center">
        <div class="col-9 pt-2">
          <%= tea.tea_type.name %>
          (<%= tea.prefecture.name %>)
          &nbsp;
          <%= link_to user_path(tea.user), class: "link-dark"  do %>
            <%= tea.user.name %>
          <% end %>
        </div>
        <div id="favorite-<%= tea.id %>" class="col-3">
          <%= render "public/favorites/favorite", tea: tea %>
        </div>
      </div>
      <%= tea.created_at.strftime('%Y/%m/%d') %>
      <%= link_to tea_path(tea), class: "link-dark"  do %>
        <%= tea.opinion.truncate(15) %>
      <% end %>
    </div>   
  <% end %>
</div>
