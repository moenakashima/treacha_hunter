<div class="container">
  
  <div class="row">
    <h5 class="text-center mb-5">新規投稿フォーム</h5>
  </div>
  
  <% if flash[:error].present? %>
    <h4>
      <%= flash[:error].count %>件のエラーが発生しました。
    </h4>
    <ul class="errors">
      <% flash[:error].each do |e| %>
        <li><%= e %></li>
      <% end %>
    </ul>
  <% end %>
  
  <%= render "form", tea: @tea  %>

</div>