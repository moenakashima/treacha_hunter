<div class="container">
  
  <div class="row">
    <h5 class="text-center mb-4">お茶の種類名編集</h5>
  </div>
  <%= render 'layouts/errors', obj: @tea_type %>
  <div class="row mb-5">
    <table>
      <%= form_with model: @tea_type, url: admin_tea_type_path(@tea_type) do |form| %>
      <tbody>
        <tr class="field">
          <td>
            <%= form.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"%>
          </td>
        
          <td class="actions">
            <%= form.submit "変更を保存する", class: "ms-5 btn btn-outline-success" %>
            <%= link_to "変更せずに戻る", admin_tea_types_path, class: "ms-1 btn btn-outline-secondary" %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>