<div class="container">
  
  <div class="row d-flex justify-content-center fs-3">
    管理者ログイン
  </div>
  
  <div class="login-container">
    <div class="avatar"></div>
    <%= form_with model: @admin, url: admin_session_path do |f| %>
      <div class="form-group mb-2">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email"  %>
      </div>
      
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "password" %>
      </div>
    
      <!--% if devise_mapping.rememberable? %>-->
      <!--  <div class="field">-->
      <!--    %= f.check_box :remember_me %>-->
      <!--    %= f.label :remember_me %>-->
      <!--  </div>-->
      <!--% end %>-->
        <%= f.submit "ログイン", class: "btn btn-outline-info btn-block col-12 mt-2" %>
    <% end %>
  
    <div class="my-2"><%= render "admin/shared/links" %></div>
    
  </div>
</div>
