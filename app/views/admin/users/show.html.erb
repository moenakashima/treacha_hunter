<div class="container">
  
  <div class="row justify-content-center">
    <h5 class="col-3 text-center mb-4 show-title">ユーザーInfo</h5>
    <h5 class="col-8 text-center mb-4 show-title">ユーザー投稿一覧</h5>
  </div>
  <div class="row justify-content-center">
    
    <div class="col-lg-4 col-md-10 me-2 mt-3">
      <table border="3" sellspacing="10" class="table table-light">
        <tbody>
          <tr>
            <td colspan="2" class="text-center"><%= image_tag @user.get_profile_image(100,100) %></td>
          </tr>
          <tr>
            <td><%= "ユーザーID" %></td>
            <td><%=  @user.id %></td>
          </tr>
          
          <tr>
            <td><%= "登録日" %></td>
            <td><%= @user.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          
          <tr>
            <td><%= "ユーザー名" %></td>
            <td><%= @user.name %></td>
          </tr>
          
          <tr>
            <td><%= "お住まいの地域" %></td>
            <td><%= @user.prefecture.name %></td>
          </tr>
          
          <tr>
            <td><%= "メールアドレス" %></td>
            <td><%= @user.email %></td>
          </tr>
          
          <tr>
            <td><%= "自己紹介" %></td>
            <td><%= @user.introduction %></td>
          </tr>
          
          <tr>
            <td><%= "会員ステータス" %></td>
            <td><%= @user.is_active ? '有効' : '停止中' %></td>
          </tr>
          <tr>
            <td colspan="2" class="text-center"><%= link_to "情報編集する", edit_admin_user_path(@user), class: "btn btn-outline-secondary" %></td>
          </tr>
        </tbody>
      </table>
    </div>
    
    <div class="col-lg-7 col-10 table-responsive">
      <%= render "admin/teas/teas", teas: @teas %>
    </div>
          
  </div>
</div>
 