<h1>ユーザー編集画面</h1>
<%= render 'layouts/errors', obj: @user %>
<%= form_with model: @user, url: admin_user_path(@user) do |form| %>

  <div class="field">
    <%= "プロフィール画像" %><br />
    <%= image_tag @user.get_profile_image(100,100) %>
  </div>  
  
  <div class="field">
    <%= "ユーザーID" %><br />
    <%=  @user.id %>
  </div>  
  
  <div class="field">
    <%= "登録日" %><br />
    <%= @user.created_at.strftime('%Y/%m/%d') %>
  </div>  
  
  <div class="field">
    <%= form.label :"ユーザーネーム" %><br />
    <%= form.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= form.label :"お住まいの地域" %><br />
    <%= form.select :prefecture_id, Prefecture.pluck(:name, :id) %>
  </div>

  <div class="field">
    <%= form.label :"メールアドレス" %><br />
    <%= form.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= "自己紹介" %><br />
    <%= @user.introduction %>
  </div>
  
  <div class="field">
    <%= form.label "会員ステータス" , class: "col-sm-2 control-label"%>
    <%= form.radio_button :is_active, :true %>
    <%= form.label :is_active, "有効", value: true %>
    <%= form.radio_button :is_active,  :false %>
    <%= form.label :is_active, "停止中", value: false %>
  </div>

  <div class="actions">
    <%= form.submit "変更を保存する" %>
  </div>

<% end %>