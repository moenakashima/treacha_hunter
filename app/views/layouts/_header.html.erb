<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-success">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"><span>トレチャーハンター</span></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li>
            <%= link_to user_path(current_user),class: 'nav-link text-light' do %>
              <i class="fas fa-home"></i> マイページ
            <% end %>
          </li>
          <li>
            <%=  link_to root_path,class: 'nav-link text-light' do %>
              <i class="fas fa-users"></i> Home
            <% end %>
          </li>
          <li>
            <%=  link_to users_path ,class: 'nav-link text-light' do %>
              <i class="fas fa-book-open"></i> トレチャーハンターたち
            <% end %>
          </li>
          <li>
            <%=  link_to destroy_user_session_path ,method: :delete, class: 'nav-link text-light' do %>
              <i class="fas fa-book-open"></i> ログアウト
            <% end %>
          </li>
          <li class="form-group d-flex" >
            <div class="row">
            <%= form_with url: search_path, method: :get, local: :true do |f| %>
              <div class="col"><%= f.text_field :keyword, placeholder: "Search", class: "form-control" %></div>
              <div class="col"><%= f.submit "検索"%></div>
            <% end %>
            </div>
           </li>
        <% else %>
          <li>
            <%= link_to about_path,class: 'nav-link text-light' do %>
              <i class="fas fa-home"></i>About
            <% end %>
          </li>
          <li>
            <%= link_to new_user_registration_path,class: 'nav-link text-light' do %>
              <i class="fas fa-user-plus"></i>新規登録
            <% end %>
          </li>
          <li>
            <%= link_to new_user_session_path ,class: 'nav-link text-light' do %>
              <i class="fas fa-sign-in-alt"></i>ログイン
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>